{
  "name": "todo-app-monorepo",
  "version": "1.0.0",
  "description": "A full-stack todo application with React frontend, Go backend, and Terraform infrastructure",
  "private": true,
  "scripts": {
    "setup": "./dev-setup.sh",
    "backend": "cd backend && go run main.go",
    "frontend": "cd frontend && npm start",
    "frontend:build": "cd frontend && npm run build",
    "frontend:test": "cd frontend && npm test",
    "backend:test": "cd backend && go test ./...",
    "infra:init": "cd infra && terraform init",
    "infra:plan": "cd infra && terraform plan",
    "infra:apply": "cd infra && terraform apply",
    "infra:destroy": "cd infra && terraform destroy",
    "dev": "echo 'Run the following commands in separate terminals:' && echo '  npm run backend' && echo '  npm run frontend'"
  },
  "keywords": [
    "todo",
    "react",
    "go",
    "typescript",
    "material-ui",
    "terraform",
    "aws",
    "monorepo"
  ],
  "author": "koblas",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/koblas/prtest.git"
  },
  "workspaces": [
    "frontend"
  ]
}